<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converter"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginVertical="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewleft"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="25dp"
            android:clickable="true"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="2dp">

            <LinearLayout
                android:id="@+id/llAmountLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAmountLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="255"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/tvFromCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/holo_orange_light"
                    android:text="PLN"
                    android:textSize="10sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/imageReplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_conv"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:clickable="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewright"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAmountRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="42"
                    android:text="0.00"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvToCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/holo_orange_light"
                    android:text="EUR"
                    android:textSize="10sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:layout_marginVertical="1dp"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:textColor="@android:color/black"
        android:text="@string/command1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:cardCornerRadius="13dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                android:layout_marginStart="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/walletOkFrom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_wallet"
                        android:clickable="true"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

                <NumberPicker
                    android:id="@+id/pickerFrom"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="45dp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:text="From"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:cardCornerRadius="13dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                android:layout_marginStart="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/walletOkTo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_wallet"
                        android:clickable="true"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <NumberPicker
                android:id="@+id/pickerTo"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="45dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <TextView
                    android:id="@+id/tvTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:text="To"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="9dp"
        android:text="Convert"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                app:cardCornerRadius="11dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="Main goal"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/command_main"
                                android:textSize="9dp"
                                android:layout_marginStart="18dp"/>

                        </LinearLayout>

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressTint="@color/colorSecond"
                            android:progress="50"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="18dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="13sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                                android:layout_marginStart="20dp"
                                android:layout_marginVertical="2dp"
                                android:layout_marginEnd="1dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>

                            <TextView
                                android:id="@+id/tvGoalFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5000"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

                            <TextView
                                android:id="@+id/goalCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PLN"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="3dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                                android:layout_marginEnd="18dp"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                app:cardCornerRadius="11dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="end">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="Main goal"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/command_main"
                                android:textSize="9dp"
                                android:layout_marginStart="18dp"/>

                        </LinearLayout>

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressTint="@color/colorSecond"
                            android:progress="50"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="18dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="13sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                                android:layout_marginStart="20dp"
                                android:layout_marginVertical="2dp"
                                android:layout_marginEnd="1dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>

                            <TextView
                                android:id="@+id/tvGoalSecond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5000"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="1dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

                            <TextView
                                android:id="@+id/goalCurrency2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EUR"
                                android:textColor="@android:color/black"
                                android:layout_marginVertical="2dp"
                                android:textSize="16sp"
                                android:layout_marginStart="3dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                                android:layout_marginEnd="18dp"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>